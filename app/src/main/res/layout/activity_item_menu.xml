<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:id="@+id/product"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="닌텐도 스위치"
                android:textSize="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/_10_000"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="안녕하세요\n새상품 입니다\n기스없음."
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#C0C0C0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/product_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="#게임"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#C0C0C0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    tools:srcCompat="@drawable/usericon" />
                <TextView
                    android:id="@+id/product_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="판매자 : 000 님"
                    android:textColor="#808080" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:srcCompat="@drawable/message" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/product_message"
                    android:text="0" />

                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:srcCompat="@drawable/like_off" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/product_like"
                    android:text="0" />

                <TextView
                    android:id="@+id/product_state_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#808080"
                    android:text="판매중" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:srcCompat="@drawable/line" />

</androidx.appcompat.widget.LinearLayoutCompat>
